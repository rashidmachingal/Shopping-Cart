<!-- ======= orders start =======-->

<section class="mt-5">
  <div class="container">
    <div class="row">
      <table id="customers">
        <thead>
          <tr>
            <th>Date</th>
            <th>Address</th>
            <th>Price</th>
            <th>Payment</th>
            <th>Status</th>
            <th>Products</th>
          </tr>
        </thead>
        <tbody>
          {{#each orders}}
          <tr>
            <td>{{this.deliveryDetails.date}}</td>
            <td>
              {{this.deliveryDetails.name}}<br>{{this.deliveryDetails.address}}<br>Pin.{{this.deliveryDetails.pincode}}
              <br> {{this.deliveryDetails.mobile}}</td>
            <td>â‚¹{{this.totalAmount}}</td>
            <td>{{this.paymentMethod}}</td>
            <td>{{this.status}}</td>
            <td><a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>

<!-- ======= orders end =======-->

